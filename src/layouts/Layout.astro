---
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Data Engineer - CV and Portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #f0f6fc;
        background: #0d1117;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
      }

      /* Header */
      header {
        background: #161b22;
        border-bottom: 1px solid #21262d;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      nav {
        padding: 1rem 0;
      }

      .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: #58a6ff;
        text-decoration: none;
        transition: color 0.3s;
      }

      .logo:hover {
        color: #f0f6fc;
      }

      .nav-links {
        display: flex;
        list-style: none;
        gap: 2rem;
        margin: 0;
        padding: 0;
      }

      .nav-links a {
        text-decoration: none;
        color: #8b949e;
        font-weight: 500;
        transition: color 0.3s;
      }

      .nav-links a:hover {
        color: #f0f6fc;
      }

      /* Main content */
      main {
        min-height: calc(100vh - 200px);
        padding: 2rem 0;
        background: #0d1117;
      }

      /* Footer */
      footer {
        background: #161b22;
        color: #8b949e;
        text-align: center;
        padding: 2rem 0;
        margin-top: 4rem;
        border-top: 1px solid #21262d;
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .social-links {
        display: flex;
        gap: 1rem;
      }

      .social-links a {
        color: #8b949e;
        text-decoration: none;
        transition: color 0.3s;
      }

      .social-links a:hover {
        color: #f0f6fc;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .nav-content {
          flex-direction: column;
          gap: 1rem;
        }
        
        .nav-links {
          gap: 1.5rem;
        }
        
        .footer-content {
          flex-direction: column;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
        <header>
          <nav class="container">
            <div class="nav-content">
              <a href="/" class="logo">Alonso Burón</a>
              <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/contact">Contact</a></li>
              </ul>
            </div>
          </nav>
        </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="footer-content">
          <p>&copy; 2025 Alonso Burón. All rights reserved.</p>
            <div class="social-links">
              <a href="https://github.com/alonsoburon" target="_blank" rel="noopener">GitHub</a>
              <a href="https://linkedin.com/in/alonsoburon" target="_blank" rel="noopener">LinkedIn</a>
              <a href="mailto:alonso.buron@proton.me">Email</a>
            </div>
        </div>
      </div>
    </footer>
  </body>
</html>
