---
import Layout from '../layouts/Layout.astro';
import { openSourceProjects, closedSourceProjects } from '../data/projects';

// Combine all projects and sort by publishedAt (newest first)
const allProjects = [...openSourceProjects, ...closedSourceProjects]
  .filter(project => project.publishedAt) // Only include projects with publishedAt
  .sort((a, b) => {
    const dateA = a.publishedAt!.getTime();
    const dateB = b.publishedAt!.getTime();
    return dateB - dateA; // Newest first
  });
---

<Layout title="Projects" description="A showcase of Alonso BurÃ³n's projects.">
  <div class="projects-container">
    <h2>All Projects</h2>
    <div class="projects-list">
      {allProjects.map((project) => (
        <div class="project-item">
          <div class="project-header">
            <h3>
              {project.githubUrl ? (
                <a href={project.githubUrl} target="_blank" rel="noopener noreferrer">
                  {project.title}
                </a>
              ) : (
                project.title
              )}
            </h3>
            <span class="project-period">{project.period}</span>
          </div>
          {project.role && <div class="project-role">{project.role}</div>}
          <p>{project.description}</p>
          <div class="project-details">
            <div class="project-achievements">
              {project.achievements.map((achievement) => (
                <span>{achievement}</span>
              ))}
            </div>
            {project.tech && (
              <div class="project-tech">
                {project.tech.map((tech) => (
                  <span>{tech}</span>
                ))}
              </div>
            )}
          </div>
          {project.githubUrl && (
            <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline">View on GitHub</a>
          )}
        </div>
      ))}
    </div>
  </div>

  <style>
    /* Project Showcase Styles */
    .projects-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    .projects-container h2 {
      font-size: 1.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 2rem;
      color: #f0f6fc;
    }
    .projects-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .project-item {
      background: rgba(30, 41, 59, 0.2);
      border: 1px solid rgba(148, 163, 184, 0.1);
      border-radius: 6px;
      padding: 1rem;
    }
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.25rem;
    }
    .project-header h3 {
      color: #f1f5f9;
      font-size: 1.2rem;
      font-weight: 600;
      margin: 0;
    }
    .project-period {
      color: #94a3b8;
      font-size: 0.75rem;
      background: rgba(148, 163, 184, 0.1);
      padding: 0.15rem 0.4rem;
      border-radius: 8px;
      flex-shrink: 0;
    }
    .project-role {
      color: #58a6ff;
      font-weight: 500;
      margin-bottom: 0.25rem;
      font-size: 0.8rem;
    }
    .project-item p {
      color: #cbd5e1;
      line-height: 1.3;
      margin-bottom: 0.5rem;
      font-size: 0.8rem;
    }
    .project-details {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }
    .project-details .project-tech {
      margin-left: auto;
    }
    .project-achievements, .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
      margin-bottom: 0.5rem;
    }
    .project-details .project-achievements,
    .project-details .project-tech {
      margin-bottom: 0;
    }
    .project-achievements span {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
      border: 1px solid rgba(16, 185, 129, 0.2);
    }
    .project-tech span {
      background: rgba(88, 166, 255, 0.1);
      color: #58a6ff;
      border: 1px solid rgba(88, 166, 255, 0.2);
    }
    .project-achievements span, .project-tech span {
      padding: 0.15rem 0.4rem;
      border-radius: 8px;
      font-size: 0.7rem;
    }
    .btn {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      border: 2px solid transparent;
      font-size: 0.9rem;
      margin-top: 1rem;
      text-align: center;
    }
    .btn-outline {
      background: transparent;
      border-color: #58a6ff;
      color: #58a6ff;
    }
    .btn-outline:hover {
      background: #58a6ff;
      color: white;
    }
  </style>
</Layout>