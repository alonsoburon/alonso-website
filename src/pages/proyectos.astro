---
import Layout from '../layouts/Layout.astro';

const proyectos = [
  {
    title: 'Sistema de Predicción de Demanda',
    description: 'Modelo de machine learning para predecir demanda de productos con 95% de precisión, procesando 1M+ transacciones diarias.',
    technologies: ['Python', 'TensorFlow', 'Apache Spark', 'AWS'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/demand-prediction',
    demo: 'https://demo.example.com'
  },
  {
    title: 'Pipeline de Datos en Tiempo Real',
    description: 'Arquitectura de streaming de datos que procesa eventos en tiempo real usando Kafka, Spark Streaming y Elasticsearch.',
    technologies: ['Kafka', 'Spark Streaming', 'Elasticsearch', 'Docker'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/streaming-pipeline',
    demo: null
  },
  {
    title: 'Dashboard de Analytics',
    description: 'Dashboard interactivo para análisis de datos de negocio con visualizaciones en tiempo real y alertas automáticas.',
    technologies: ['React', 'D3.js', 'Node.js', 'PostgreSQL'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/analytics-dashboard',
    demo: 'https://dashboard.example.com'
  },
  {
    title: 'Framework de Calidad de Datos',
    description: 'Sistema automatizado para validación y monitoreo de calidad de datos con alertas y reportes detallados.',
    technologies: ['Python', 'Great Expectations', 'Airflow', 'GCP'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/data-quality-framework',
    demo: null
  },
  {
    title: 'API de Machine Learning',
    description: 'API REST para servir modelos de ML con autoscaling, versionado y monitoreo de rendimiento en tiempo real.',
    technologies: ['FastAPI', 'MLflow', 'Kubernetes', 'Prometheus'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/ml-api',
    demo: 'https://api.example.com'
  },
  {
    title: 'Data Lake en la Nube',
    description: 'Arquitectura de data lake escalable en AWS con procesamiento batch y streaming, optimizada para costos.',
    technologies: ['AWS S3', 'Glue', 'Athena', 'Lambda'],
    image: '/api/placeholder/400/250',
    github: 'https://github.com/alonso/cloud-data-lake',
    demo: null
  }
];
---

<Layout title="Proyectos - Alonso" description="Portafolio de proyectos de ingeniería de datos, machine learning y análisis de datos.">
  <div class="container">
    <header class="projects-header">
      <h1>Proyectos</h1>
      <p class="projects-subtitle">
        Una selección de proyectos que demuestran mi experiencia en ingeniería de datos, 
        machine learning y desarrollo de sistemas escalables.
      </p>
    </header>

    <div class="projects-grid">
      {proyectos.map((proyecto) => (
        <div class="project-card">
          <div class="project-image">
            <div class="placeholder-image">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
            </div>
          </div>
          <div class="project-content">
            <h3 class="project-title">{proyecto.title}</h3>
            <p class="project-description">{proyecto.description}</p>
            <div class="project-technologies">
              {proyecto.technologies.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
            <div class="project-links">
              <a href={proyecto.github} target="_blank" rel="noopener" class="project-link">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Código
              </a>
              {proyecto.demo && (
                <a href={proyecto.demo} target="_blank" rel="noopener" class="project-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15,3 21,3 21,9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                  Demo
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
    .projects-header {
      text-align: center;
      margin-bottom: 4rem;
      padding: 2rem 0;
    }

    .projects-header h1 {
      font-size: 3rem;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 1rem;
    }

    .projects-subtitle {
      font-size: 1.2rem;
      color: #6b7280;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .project-card {
      background: white;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      border: 1px solid #e5e7eb;
    }

    .project-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.15);
      border-color: #2563eb;
    }

    .project-image {
      height: 200px;
      background: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .placeholder-image {
      color: #9ca3af;
    }

    .project-content {
      padding: 2rem;
    }

    .project-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 1rem;
    }

    .project-description {
      color: #6b7280;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .project-technologies {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }

    .tech-tag {
      background: #f3f4f6;
      color: #374151;
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .project-links {
      display: flex;
      gap: 1rem;
    }

    .project-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #2563eb;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: color 0.3s;
    }

    .project-link:hover {
      color: #1d4ed8;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .projects-header h1 {
        font-size: 2.5rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }

      .project-links {
        flex-direction: column;
      }
    }
  </style>
</Layout>
