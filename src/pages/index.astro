---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = await getCollection('blog');
const recentPosts = posts.slice(0, 3);

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Alonso BurÃ³n - Portfolio" description="Lead Data Engineer and Composer">
  <div class="container">
    <!-- CV Content -->
    <div class="cv-grid">
      <!-- Left Column: Skills + Education -->
      <div class="cv-left">
        <!-- Skills -->
        <section class="skills-section" style="text-align: center;">
          <h2>Technical Skills</h2>
          <div class="skills-grid">
            <div class="skill-category">
              <h3 style="color: rgb(98, 195, 98);">Programming & Data</h3>
              <div class="skill-list">
                <span>Python (Expert)</span>
                <span>SQL (Expert)</span>
                <span>PyArrow</span>
                <span>Pandas</span>
              </div>
            </div>
            <div class="skill-category">
              <h3 style="color: rgb(98, 195, 98);">Data Engineering</h3>
              <div class="skill-list">
                <span>ETL/ELT Pipelines</span>
                <span>Data Warehousing</span>
                <span>Apache Spark</span>
                <span>Data Quality</span>
              </div>
            </div>
            <div class="skill-category">
              <h3 style="color: rgb(98, 195, 98);">Cloud & Infrastructure</h3>
              <div class="skill-list">
                <span>AWS</span>
                <span>Docker</span>
                <span>Kubernetes</span>
                <span>CI/CD</span>
              </div>
            </div>
            <div class="skill-category">
              <h3 style="color: rgb(98, 195, 98);">Leadership & Management</h3>
              <div class="skill-list">
                <span>Team Leadership</span>
                <span>Mentoring</span>
                <span>Project Management</span>
                <span>Agile</span>
              </div>
            </div>
          </div>
        </section>

        <!-- Education -->
        <section class="education-section">
          <h2>Education</h2>
          <div class="education-list">
            <div class="edu-item">
              <div class="edu-header">
                <h3>Business Engineering</h3>
                <span class="edu-period">2018 - 2022</span>
              </div>
              <div class="edu-institution">Universidad de Chile</div>
              <p>Specialization in data analysis and economics. Major in Data Analysis.</p>
            </div>
            <div class="edu-item">
              <div class="edu-header">
                <h3>Technical Certifications</h3>
                <span class="edu-period">2020 - 2023</span>
              </div>
              <div class="edu-institution">AWS, Google Cloud, Microsoft</div>
              <p>AWS Solutions Architect, Google Cloud Data Engineer, Power BI Data Analyst.</p>
            </div>
          </div>
        </section>
      </div>

      <!-- Right Column: Projects -->
      <div class="cv-right">
        <section class="projects-section">
          <h2>Successful Projects</h2>
          <div class="projects-list">
