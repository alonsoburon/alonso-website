      }
    }
  </style>

  <script>
    const nodeDetails: Record<string, { title: string; description: string }> = {
      source: {
        title: "Data Sources",
        description: "Integrated 15+ data sources including REST APIs, database connections, and file systems. Processing 2.3M records per minute with real-time validation and error handling. Built custom connectors for legacy systems and implemented automated data quality checks."
      },
      etl: {
        title: "ETL Engine",
        description: "Orchestrated 12 Dagster jobs using DLT for automated data transformations. Achieved 98% success rate with comprehensive monitoring and alerting. Implemented incremental processing and data lineage tracking for compliance requirements."
      },
      warehouse: {
        title: "Data Warehouse",
        description: "Managed 100TB+ of structured and unstructured data across PostgreSQL and MongoDB clusters. Maintained 99.9% uptime with automated backups and disaster recovery. Optimized query performance reducing average response time by 60%."
      },
      analytics: {
        title: "Analytics Layer",
        description: "Built 25+ interactive dashboards in Power BI and Metabase serving 200+ users. Achieved 5-minute data latency from source to dashboard. Implemented row-level security and automated report distribution."
      }
    };

    function showNodeDetails(nodeId: string) {
      // Remove active class from all nodes
      document.querySelectorAll('.pipeline-node').forEach(node => {
        node.classList.remove('active');
      });
      
      // Add active class to clicked node
      const clickedNode = document.querySelector(`[data-node="${nodeId}"]`);
      if (clickedNode) {
        clickedNode.classList.add('active');
      }
      
      // Update details
      const details = nodeDetails[nodeId];
      if (details) {
        const titleElement = document.getElementById('detailsTitle');
        const descriptionElement = document.getElementById('detailsDescription');
        if (titleElement) titleElement.textContent = details.title;
        if (descriptionElement) descriptionElement.textContent = details.description;
      }
    }

    // Add some random status changes for realism
    setInterval(() => {
      const nodes = document.querySelectorAll('.pipeline-node');
      nodes.forEach(node => {
        if (Math.random() < 0.1) { // 10% chance
          const status = node.querySelector('.node-status') as HTMLElement;
          if (status) {
            status.style.animation = 'none';
            setTimeout(() => {
              status.style.animation = 'pulse 2s infinite';
            }, 100);
          }
        }
      });
    }, 5000);
  </script>
