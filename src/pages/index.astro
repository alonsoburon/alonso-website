---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = await getCollection('blog');
const recentPosts = posts.slice(0, 3);

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Alonso Burón - Portfolio" description="Lead Data Engineer and Composer">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Hi, I'm Alonso</h1>
        <p class="hero-subtitle">Building LATAM's best data extraction platform</p>
        <p class="hero-description">
          Former music student who drifted into data engineering. Obsessed with learning and building.
          Now leading a Data Engineering team, processing millions of records daily across LATAM. 
        </p>
        <div class="hero-buttons">
          <a href="/blog" class="btn btn-primary">Read My Story</a>
          <a href="/contact" class="btn btn-secondary">Get In Touch</a>
        </div>
      </div>
    </section>


    <!-- Skills -->
    <section class="skills">
      <h2>Competencias Técnicas</h2>
      <div class="skills-grid">
        <div class="skill-category">
          <h3>Programación & Datos</h3>
          <ul>
            <li>Python (Experto)</li>
            <li>SQL (Experto)</li>
            <li>PyArrow & Delta Tables</li>
            <li>Pandas & NumPy</li>
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Ingeniería de Datos</h3>
          <ul>
            <li>Pipelines ETL/ELT</li>
            <li>Data Warehousing</li>
            <li>Apache Spark</li>
            <li>Frameworks de Calidad</li>
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Cloud & Infraestructura</h3>
          <ul>
            <li>AWS (S3, Lambda, Glue)</li>
            <li>Docker & Kubernetes</li>
            <li>Pipelines CI/CD</li>
            <li>Infrastructure as Code</li>
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Liderazgo & Gestión</h3>
          <ul>
            <li>Liderazgo de Equipos</li>
            <li>Mentoría Técnica</li>
            <li>Gestión de Proyectos</li>
            <li>Colaboración Interdisciplinaria</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Proyectos Exitosos -->
    <section class="projects">
      <h2>Proyectos Exitosos</h2>
      <div class="projects-grid">
        <div class="project-card">
          <div class="project-header">
            <h3>Warp Data Platform</h3>
            <span class="project-period">2023 - Presente</span>
          </div>
          <div class="project-role">Data Engineering Lead</div>
          <p class="project-description">
            Plataforma de datos empresarial que procesa millones de registros diarios para operaciones LATAM. 
            Arquitectura escalable con pipelines automatizados y dashboards ejecutivos.
          </p>
          <div class="project-achievements">
            <h4>Logros Clave:</h4>
            <ul>
              <li>Reducción del 70% en tiempo de procesamiento de datos</li>
              <li>Implementación de data quality frameworks</li>
              <li>Escalabilidad para 5 países LATAM</li>
            </ul>
          </div>
          <div class="project-tech">
            <span class="tech-tag">Python</span>
            <span class="tech-tag">PostgreSQL</span>
            <span class="tech-tag">Power BI</span>
            <span class="tech-tag">AWS</span>
          </div>
        </div>

        <div class="project-card">
          <div class="project-header">
            <h3>Data Engineering Cell</h3>
            <span class="project-period">2022 - 2023</span>
          </div>
          <div class="project-role">Team Lead & Founder</div>
          <p class="project-description">
            Creación y liderazgo del primer equipo de Data Engineering en Datawalt. 
            Establecimiento de procesos, metodologías y cultura de datos en la organización.
          </p>
          <div class="project-achievements">
            <h4>Logros Clave:</h4>
            <ul>
              <li>Formación de equipo de 4 ingenieros de datos</li>
              <li>Implementación de metodologías ágiles</li>
              <li>Mentoría y desarrollo de talento junior</li>
            </ul>
          </div>
          <div class="project-tech">
            <span class="tech-tag">Leadership</span>
            <span class="tech-tag">Agile</span>
            <span class="tech-tag">Mentoring</span>
            <span class="tech-tag">Process Design</span>
          </div>
        </div>

        <div class="project-card">
          <div class="project-header">
            <h3>Automated ETL Pipelines</h3>
            <span class="project-period">2021 - 2022</span>
          </div>
          <div class="project-role">Data Engineer</div>
          <p class="project-description">
            Desarrollo de pipelines ETL automatizados para procesamiento de datos financieros. 
            Optimización de procesos manuales y mejora de la calidad de datos.
          </p>
          <div class="project-achievements">
            <h4>Logros Clave:</h4>
            <ul>
              <li>Automatización del 90% de procesos manuales</li>
              <li>Mejora en calidad de datos del 85%</li>
              <li>Reducción de costos operacionales</li>
            </ul>
          </div>
          <div class="project-tech">
            <span class="tech-tag">Python</span>
            <span class="tech-tag">PyArrow</span>
            <span class="tech-tag">Delta Tables</span>
            <span class="tech-tag">Automation</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Educación -->
    <section class="education">
      <h2>Educación</h2>
      <div class="education-timeline">
        <div class="education-item">
          <div class="education-header">
            <h3>Ingeniería Comercial</h3>
            <span class="education-period">2018 - 2022</span>
          </div>
          <div class="education-institution">Universidad de Chile</div>
          <div class="education-details">
            <p>Especialización en análisis de datos y economía. Tesis sobre optimización de procesos de datos en empresas tecnológicas.</p>
            <div class="education-achievements">
              <h4>Logros Académicos:</h4>
              <ul>
                <li>Mención en Análisis de Datos</li>
                <li>Proyecto de tesis destacado</li>
                <li>Participación en competencias de programación</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="education-item">
          <div class="education-header">
            <h3>Certificaciones Técnicas</h3>
            <span class="education-period">2020 - 2023</span>
          </div>
          <div class="education-institution">AWS, Google Cloud, Microsoft</div>
          <div class="education-details">
            <p>Certificaciones en tecnologías cloud y herramientas de datos para mantenerse actualizado con las mejores prácticas de la industria.</p>
            <div class="education-achievements">
              <h4>Certificaciones:</h4>
              <ul>
                <li>AWS Certified Solutions Architect</li>
                <li>Google Cloud Professional Data Engineer</li>
                <li>Microsoft Power BI Data Analyst</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Posts -->
    <section class="recent-posts">
      <h2>Latest Articles</h2>
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <article class="post-card">
            <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
            <p class="post-meta">{formatDate(post.data.date)}</p>
            <p>{post.data.description || 'Article about data engineering and analysis.'}</p>
          </article>
        ))}
      </div>
      <div class="text-center">
        <a href="/blog" class="btn btn-outline">View All Articles</a>
      </div>
    </section>
  </div>

  <style>
    /* Hero Section */
    .hero {
      text-align: center;
      padding: 4rem 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      margin: -2rem 0 4rem 0;
      border-radius: 0 0 0 0;
    }

    .hero-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      font-size: 1.5rem;
      font-weight: 300;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .hero-description {
      font-size: 1.1rem;
      margin-bottom: 2rem;
      opacity: 0.8;
      line-height: 1.7;
    }

    .hero-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    /* Buttons */
    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      border: 2px solid transparent;
    }

    .btn-primary {
      background: white;
      color: #667eea;
    }

    .btn-primary:hover {
      background: #f8f9fa;
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: transparent;
      color: white;
      border-color: white;
    }

    .btn-secondary:hover {
      background: white;
      color: #667eea;
    }

    .btn-outline {
      background: transparent;
      color: #58a6ff;
      border-color: #58a6ff;
    }

    .btn-outline:hover {
      background: #58a6ff;
      color: white;
    }

    /* Sections */
    section {
      margin-bottom: 4rem;
    }

    h2 {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 3rem;
      color: #f0f6fc;
    }

    /* Skills Styles */
    .skills {
      padding: 4rem 0;
    }

    .skills h2 {
      text-align: center;
      margin-bottom: 3rem;
      color: #f1f5f9;
      font-size: 2.5rem;
      font-weight: 700;
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .skill-category {
      background: rgba(30, 41, 59, 0.3);
      border: 1px solid rgba(148, 163, 184, 0.1);
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .skill-category:hover {
      background: rgba(30, 41, 59, 0.5);
      border-color: rgba(16, 185, 129, 0.3);
      transform: translateY(-2px);
    }

    .skill-category h3 {
      color: #10b981;
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      border-bottom: 2px solid rgba(16, 185, 129, 0.2);
      padding-bottom: 0.5rem;
    }

    .skill-category ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .skill-category li {
      color: #cbd5e1;
      padding: 0.5rem 0;
      border-bottom: 1px solid rgba(148, 163, 184, 0.1);
      transition: color 0.3s ease;
    }

    .skill-category li:last-child {
      border-bottom: none;
    }

    .skill-category li:hover {
      color: #f1f5f9;
    }

    /* Projects Styles */
    .projects {
      padding: 4rem 0;
      background: rgba(15, 23, 42, 0.3);
    }

    .projects h2 {
      text-align: center;
      margin-bottom: 3rem;
      color: #f1f5f9;
      font-size: 2.5rem;
      font-weight: 700;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    .project-card {
      background: rgba(30, 41, 59, 0.4);
      border: 1px solid rgba(148, 163, 184, 0.1);
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .project-card:hover {
      background: rgba(30, 41, 59, 0.6);
      border-color: rgba(16, 185, 129, 0.3);
      transform: translateY(-4px);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }

    .project-header h3 {
      color: #10b981;
      font-size: 1.5rem;
      font-weight: 600;
      margin: 0;
    }

    .project-period {
      color: #94a3b8;
      font-size: 0.9rem;
      background: rgba(148, 163, 184, 0.1);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
    }

    .project-role {
      color: #f59e0b;
      font-weight: 500;
      margin-bottom: 1rem;
      font-size: 1rem;
    }

    .project-description {
      color: #cbd5e1;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .project-achievements h4 {
      color: #f1f5f9;
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .project-achievements ul {
      list-style: none;
      padding: 0;
      margin: 0 0 1.5rem 0;
    }

    .project-achievements li {
      color: #cbd5e1;
      padding: 0.25rem 0;
      position: relative;
      padding-left: 1.5rem;
    }

    .project-achievements li::before {
      content: '✓';
      position: absolute;
      left: 0;
      color: #10b981;
      font-weight: bold;
    }

    .project-tech {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tech-tag {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.8rem;
      border: 1px solid rgba(16, 185, 129, 0.2);
    }

    /* Education Styles */
    .education {
      padding: 4rem 0;
    }

    .education h2 {
      text-align: center;
      margin-bottom: 3rem;
      color: #f1f5f9;
      font-size: 2.5rem;
      font-weight: 700;
    }

    .education-timeline {
      max-width: 800px;
      margin: 0 auto;
    }

    .education-item {
      background: rgba(30, 41, 59, 0.3);
      border: 1px solid rgba(148, 163, 184, 0.1);
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      position: relative;
      transition: all 0.3s ease;
    }

    .education-item:hover {
      background: rgba(30, 41, 59, 0.5);
      border-color: rgba(16, 185, 129, 0.3);
      transform: translateY(-2px);
    }

    .education-item::before {
      content: '';
      position: absolute;
      left: -1px;
      top: 0;
      bottom: 0;
      width: 4px;
      background: linear-gradient(to bottom, #10b981, #f59e0b);
      border-radius: 2px;
    }

    .education-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.5rem;
    }

    .education-header h3 {
      color: #f1f5f9;
      font-size: 1.5rem;
      font-weight: 600;
      margin: 0;
    }

    .education-period {
      color: #94a3b8;
      font-size: 0.9rem;
      background: rgba(148, 163, 184, 0.1);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
    }

    .education-institution {
      color: #10b981;
      font-weight: 500;
      margin-bottom: 1rem;
      font-size: 1.1rem;
    }

    .education-details p {
      color: #cbd5e1;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .education-achievements h4 {
      color: #f1f5f9;
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .education-achievements ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .education-achievements li {
      color: #cbd5e1;
      padding: 0.25rem 0;
      position: relative;
      padding-left: 1.5rem;
    }

    .education-achievements li::before {
      content: '🎓';
      position: absolute;
      left: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .skills-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .skill-category {
        padding: 1.5rem;
      }
      
      .skills h2 {
        font-size: 2rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .project-card {
        padding: 1.5rem;
      }

      .project-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .education-item {
        padding: 1.5rem;
      }

      .education-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .projects h2,
      .education h2 {
        font-size: 2rem;
      }
    }


    /* Recent Posts */
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .post-card {
      background: #161b22;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.3);
      border: 1px solid #21262d;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.4);
      border-color: #58a6ff;
    }

    .post-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .post-card h3 a {
      color: #f0f6fc;
      text-decoration: none;
    }

    .post-card h3 a:hover {
      color: #58a6ff;
    }

    .post-meta {
      color: #8b949e;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .text-center {
      text-align: center;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.25rem;
      }

      .hero-buttons {
        flex-direction: column;
        align-items: center;
      }

      .timeline::before {
        left: 1rem;
      }

      .timeline-item {
        padding-left: 3rem;
      }

      .timeline-marker {
        left: 0.25rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

</Layout>
