---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = await getCollection('blog');
const recentPosts = posts.slice(0, 3);

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Alonso - Ingeniero de Datos" description="CV y portafolio de Alonso, especialista en ingeniería de datos, machine learning y análisis de datos.">
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Hola, soy Alonso</h1>
        <p class="hero-subtitle">Jefe de Célula - Lead Data Engineer</p>
        <p class="hero-description">
          Soy un nerd de la tecnología con pasión por la automatización y por hacer mi trabajo cada vez más eficiente.
          Actualmente estoy estudiando para obtener mi título en Ciencia de Datos, mientras trabajo full time como ingeniero de BI y datos.
          Me encanta usar Linux para todo tipo de soluciones: dualbooteo Arch y Windows.
        </p>
        <div class="hero-buttons">
          <a href="/proyectos" class="btn btn-primary">Ver Proyectos</a>
          <a href="/contacto" class="btn btn-secondary">Contactar</a>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="skills">
      <h2>Habilidades Técnicas</h2>
      <div class="skills-grid">
        <div class="skill-category">
          <h3>Lenguajes</h3>
          <div class="skill-tags">
            <span class="skill-tag">Python</span>
            <span class="skill-tag">SQL</span>
            <span class="skill-tag">Stata</span>
          </div>
        </div>
        <div class="skill-category">
          <h3>Data Engineering</h3>
          <div class="skill-tags">
            <span class="skill-tag">Dagster</span>
            <span class="skill-tag">DLT</span>
            <span class="skill-tag">FastAPI</span>
            <span class="skill-tag">Arquitectura de Software</span>
          </div>
        </div>
        <div class="skill-category">
          <h3>Sistemas</h3>
          <div class="skill-tags">
            <span class="skill-tag">Linux</span>
            <span class="skill-tag">Arch Linux</span>
            <span class="skill-tag">Ubuntu</span>
          </div>
        </div>
        <div class="skill-category">
          <h3>Bases de Datos</h3>
          <div class="skill-tags">
            <span class="skill-tag">SQL Databases</span>
            <span class="skill-tag">NoSQL Databases</span>
          </div>
        </div>
        <div class="skill-category">
          <h3>Gestión</h3>
          <div class="skill-tags">
            <span class="skill-tag">Team Management</span>
            <span class="skill-tag">Liderazgo</span>
            <span class="skill-tag">Coordinación</span>
          </div>
        </div>
        <div class="skill-category">
          <h3>Adicionales</h3>
          <div class="skill-tags">
            <span class="skill-tag">Full-Stack</span>
            <span class="skill-tag">Música</span>
            <span class="skill-tag">Audiovisual</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="experience">
      <h2>Experiencia Profesional</h2>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3>Data Team Lead</h3>
            <p class="company">Datawalt</p>
            <p class="period">mayo 2025 - Presente</p>
            <ul>
              <li>Lideré la creación de software para unificar y escalar la gestión de información corporativa</li>
              <li>Fundé y lidero la primera Célula de Ingeniería de Datos de la compañía</li>
              <li>Dirijo un equipo enfocado en mejorar integraciones de software y crear nuevas</li>
              <li>Objetivo: crear el mejor extractor de datos en LATAM</li>
            </ul>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3>Ingeniero de Desarrollo BI</h3>
            <p class="company">Datawalt</p>
            <p class="period">mayo 2024 - mayo 2025</p>
            <ul>
              <li>Desarrollé soluciones de Business Intelligence escalables</li>
              <li>Gestioné proyectos y clientes con enfoque en resultados</li>
              <li>Combiné habilidades técnicas y de gestión para el crecimiento</li>
            </ul>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3>Stata and Python Private Tutor</h3>
            <p class="company">Autónomo</p>
            <p class="period">agosto 2021 - enero 2024</p>
            <ul>
              <li>Tutorías privadas de análisis de datos usando Stata y Python</li>
              <li>Enseñé a estudiantes de la FEN (Facultad de Economía y Negocios)</li>
              <li>Desarrollé habilidades de comunicación y enseñanza</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Posts -->
    <section class="recent-posts">
      <h2>Últimos Artículos</h2>
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <article class="post-card">
            <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
            <p class="post-meta">{formatDate(post.data.date)}</p>
            <p>{post.data.description || 'Artículo sobre ingeniería de datos y análisis.'}</p>
          </article>
        ))}
      </div>
      <div class="text-center">
        <a href="/blog" class="btn btn-outline">Ver Todos los Artículos</a>
      </div>
    </section>
  </div>

  <style>
    /* Hero Section */
    .hero {
      text-align: center;
      padding: 4rem 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      margin: -2rem -1rem 4rem -1rem;
      border-radius: 0 0 2rem 2rem;
    }

    .hero-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      font-size: 1.5rem;
      font-weight: 300;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .hero-description {
      font-size: 1.1rem;
      margin-bottom: 2rem;
      opacity: 0.8;
      line-height: 1.7;
    }

    .hero-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    /* Buttons */
    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      border: 2px solid transparent;
    }

    .btn-primary {
      background: white;
      color: #667eea;
    }

    .btn-primary:hover {
      background: #f8f9fa;
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: transparent;
      color: white;
      border-color: white;
    }

    .btn-secondary:hover {
      background: white;
      color: #667eea;
    }

    .btn-outline {
      background: transparent;
      color: #2563eb;
      border-color: #2563eb;
    }

    .btn-outline:hover {
      background: #2563eb;
      color: white;
    }

    /* Sections */
    section {
      margin-bottom: 4rem;
    }

    h2 {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 3rem;
      color: #1f2937;
    }

    /* Skills Section */
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .skill-category {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .skill-category h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: #2563eb;
    }

    .skill-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .skill-tag {
      background: #f3f4f6;
      color: #374151;
      padding: 0.5rem 1rem;
      border-radius: 2rem;
      font-size: 0.875rem;
      font-weight: 500;
    }

    /* Experience Section */
    .timeline {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
    }

    .timeline::before {
      content: '';
      position: absolute;
      left: 2rem;
      top: 0;
      bottom: 0;
      width: 2px;
      background: #e5e7eb;
    }

    .timeline-item {
      position: relative;
      margin-bottom: 3rem;
      padding-left: 5rem;
    }

    .timeline-marker {
      position: absolute;
      left: 1.25rem;
      top: 0.5rem;
      width: 1.5rem;
      height: 1.5rem;
      background: #2563eb;
      border-radius: 50%;
      border: 4px solid white;
      box-shadow: 0 0 0 4px #e5e7eb;
    }

    .timeline-content {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .timeline-content h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #1f2937;
    }

    .company {
      font-weight: 600;
      color: #2563eb;
      margin-bottom: 0.25rem;
    }

    .period {
      color: #6b7280;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .timeline-content ul {
      list-style: none;
      padding: 0;
    }

    .timeline-content li {
      position: relative;
      padding-left: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .timeline-content li::before {
      content: '▸';
      position: absolute;
      left: 0;
      color: #2563eb;
      font-weight: bold;
    }

    /* Recent Posts */
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .post-card {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .post-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .post-card h3 a {
      color: #1f2937;
      text-decoration: none;
    }

    .post-card h3 a:hover {
      color: #2563eb;
    }

    .post-meta {
      color: #6b7280;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .text-center {
      text-align: center;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.25rem;
      }

      .hero-buttons {
        flex-direction: column;
        align-items: center;
      }

      .timeline::before {
        left: 1rem;
      }

      .timeline-item {
        padding-left: 3rem;
      }

      .timeline-marker {
        left: 0.25rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
