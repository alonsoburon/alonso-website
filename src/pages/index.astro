      }
    };

    // Initialize Cytoscape
    function initCytoscape() {
      const cy = cytoscape({
        container: document.getElementById('cy'),
        
        elements: [
          // Nodes
          { data: { id: 'python', label: 'Python\nData Processing' } },
          { data: { id: 'sql', label: 'SQL\nDatabase Queries' } },
          { data: { id: 'statistics', label: 'Statistics\nAnalytical Foundation' } },
          { data: { id: 'databases', label: 'Databases\nPostgreSQL â¢ Data Warehousing' } },
          { data: { id: 'data-engineering', label: 'Data Engineering\nETL â¢ Pipelines â¢ Automation' } },
          { data: { id: 'software-design', label: 'Software Design\nArchitecture â¢ Scalability â¢ Systems' } },
          { data: { id: 'analytics', label: 'Analytics\nBusiness Intelligence' } },
          { data: { id: 'cloud', label: 'Cloud Storage\nScalable Infrastructure' } },
          { data: { id: 'visualization', label: 'Visualization\nPower BI â¢ Dashboards' } },
