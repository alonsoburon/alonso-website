---
import Layout from '../../layouts/Layout.astro';

// Datos de ejemplo para los posts del blog
const posts = [
  {
    slug: 'optimizacion-pipelines-spark',
    title: 'Optimización de Pipelines con Apache Spark',
    date: '2024-01-15',
    excerpt: 'Estrategias avanzadas para optimizar el rendimiento de pipelines de datos en Spark, incluyendo particionado, caching y tuning de memoria.',
    tags: ['Apache Spark', 'Big Data', 'Optimización']
  },
  {
    slug: 'machine-learning-production',
    title: 'ML en Producción: Lecciones Aprendidas',
    date: '2024-01-08',
    excerpt: 'Experiencias reales desplegando modelos de machine learning en producción, desde el desarrollo hasta el monitoreo continuo.',
    tags: ['Machine Learning', 'Producción', 'DevOps']
  },
  {
    slug: 'data-quality-framework',
    title: 'Framework de Calidad de Datos',
    date: '2024-01-02',
    excerpt: 'Cómo implementar un framework robusto para asegurar la calidad de datos en organizaciones de gran escala.',
    tags: ['Data Quality', 'Framework', 'Best Practices']
  },
  {
    slug: 'streaming-data-architecture',
    title: 'Arquitectura de Datos en Tiempo Real',
    date: '2023-12-20',
    excerpt: 'Diseñando sistemas de procesamiento de datos en tiempo real usando Kafka, Spark Streaming y tecnologías cloud.',
    tags: ['Streaming', 'Kafka', 'Arquitectura']
  },
  {
    slug: 'data-governance-strategy',
    title: 'Estrategia de Gobernanza de Datos',
    date: '2023-12-10',
    excerpt: 'Implementando una estrategia efectiva de gobernanza de datos que balancea acceso, seguridad y cumplimiento.',
    tags: ['Data Governance', 'Estrategia', 'Compliance']
  },
  {
    slug: 'cost-optimization-cloud',
    title: 'Optimización de Costos en la Nube',
    date: '2023-11-28',
    excerpt: 'Técnicas prácticas para reducir costos en infraestructura cloud sin comprometer el rendimiento.',
    tags: ['Cloud', 'Cost Optimization', 'AWS']
  }
];

// Función para formatear fechas
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Blog - Alonso" description="Artículos sobre ingeniería de datos, machine learning y análisis de datos.">
  <div class="container">
    <header class="blog-header">
      <h1>Blog</h1>
      <p class="blog-subtitle">
        Artículos sobre ingeniería de datos, machine learning, big data y mejores prácticas 
        en el desarrollo de sistemas de datos escalables.
      </p>
    </header>

    <div class="blog-content">
      <div class="posts-grid">
        {posts.map((post) => (
          <article class="post-card">
            <div class="post-meta">
              <time datetime={post.date}>{formatDate(post.date)}</time>
              <div class="post-tags">
                {post.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            <h2 class="post-title">
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </h2>
            <p class="post-excerpt">{post.excerpt}</p>
            <a href={`/blog/${post.slug}`} class="read-more">Leer más →</a>
          </article>
        ))}
      </div>
    </div>
  </div>

  <style>
    .blog-header {
      text-align: center;
      margin-bottom: 4rem;
      padding: 2rem 0;
    }

    .blog-header h1 {
      font-size: 3rem;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 1rem;
    }

    .blog-subtitle {
      font-size: 1.2rem;
      color: #6b7280;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .post-card {
      background: white;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      border: 1px solid #e5e7eb;
    }

    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.15);
      border-color: #2563eb;
    }

    .post-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .post-meta time {
      color: #6b7280;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      background: #f3f4f6;
      color: #374151;
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .post-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .post-title a {
      color: #1f2937;
      text-decoration: none;
      transition: color 0.3s;
    }

    .post-title a:hover {
      color: #2563eb;
    }

    .post-excerpt {
      color: #6b7280;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .read-more {
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.875rem;
      transition: color 0.3s;
    }

    .read-more:hover {
      color: #1d4ed8;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .blog-header h1 {
        font-size: 2.5rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }

      .post-meta {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</Layout>
